@model ProductListViewModel

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Products</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/products/create">Yeni Bir Üniversite Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Üniversitenin Fotoğrafı</td>
                    <td>Üniversite İsmi</td>
                    <td style="width: 20px;">Anasayfa'da</td>
                    <td style="width: 20px;">Onaylı</td>
                    <td style="width: 150px;">Seçenekler</td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Products.Count>0)
                {
                       @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td><img src="~/img/@item.ImageUrl" width="80" alt="@item.Name universitesi eğitim @item.Name üniversitesi egitim"></td>
                                <td>@item.Name</td>
                                <td>
                                    @if(item.IsHome)
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }else{
                                        <i class="fas fa-times-circle"></i>
                                    }
                                </td>
                                <td>
                                    @if(item.IsApproved)
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }else{
                                        <i class="fas fa-times-circle"></i>
                                    }
                                </td>
                                <td>
                                    <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Düzenle</a>
                                    
                                    <form action="/admin/deleteproduct" method="POST" style="display: inline;">
                                        <input type="hidden" name="productId" value="@item.ProductId">
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </td>
                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>Kayıtlı Üniversite Yok..</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>