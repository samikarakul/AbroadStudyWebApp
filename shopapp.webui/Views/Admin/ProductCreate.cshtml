@model ProductModel

<h1 class="h3">Üniversite Ekle</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="ProductCreate" method="POST" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">İsim</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Uzantısını Yazın</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Açıklama</label>
            <div class="col-sm-10">
                <textarea id="editor" class="form-control" asp-for="Description" style="height:200px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
       <div class="form-group row">
            <label class="col-sm-2 col-form-label">Fotoğraf Seçin</label>
            <div class="col-sm-10">
                    <input type="hidden" asp-for="ImageUrl" value="file">
                    <input type="file" name="file" id="file">
            </div>
        </div> 
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </form>
    </div>
</div>
@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="/modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>
}