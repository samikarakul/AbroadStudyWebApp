@model ServeModel

<h1 class="h3">Program Ekle</h1>
<hr>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="ServeCreate" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Program Adı</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ServeName">
                    <span asp-validation-for="ServeName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-10">
                    <textarea id="editor" class="form-control" asp-for="ServeDescription" style="height:200px;" ></textarea>
                    <span asp-validation-for="ServeDescription" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Fotoğraf Seçin</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ServeImageUrl">
                    <span asp-validation-for="ServeImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}