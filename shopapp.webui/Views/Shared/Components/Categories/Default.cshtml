@model List<Category>

 <div class="list-group list-group-horizontal mt-5" style="margin-left:20%;margin-right:20%;">
    <a href="/universiteler" class="list-group-item list-group-item-action mt-4">Tüm Ülkeler</a>

    @foreach (var item in Model)
    {
        <a asp-controller="Shop" 
        asp-action="List" 
        asp-route-category="@item.Url" 
        style="float:left;"
        class=" mt-4 list-group-item list-group-item-action @(ViewBag.SelectedCategory == item.Url?"active":"")">
            @item.Name
        </a>
    }
</div>   
